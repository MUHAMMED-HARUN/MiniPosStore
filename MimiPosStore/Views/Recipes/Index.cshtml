@model SharedModels.EF.Filters.clsRecipeFilter
@{
    ViewData["Title"] = "الوصفات";
}

<h2>الوصفات</h2>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col">
            <input class="form-control" name="Name" placeholder="الاسم" value="@Model?.Name" />
        </div>
        <div class="col">
            <input class="form-control" name="Description" placeholder="الوصف" value="@Model?.Description" />
        </div>
        <div class="col">
            <input class="form-control" name="ProductName" placeholder="اسم المنتج" value="@Model?.ProductName" />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" type="submit">بحث</button>
            <a class="btn btn-success" asp-action="Save">إضافة</a>
        </div>
    </div>
    <div class="row g-2 mt-2">
        <div class="col">
            <input class="form-control" type="number" step="0.01" name="YieldQuantityFrom" placeholder="كمية من" value="@Model?.YieldQuantityFrom" />
        </div>
        <div class="col">
            <input class="form-control" type="number" step="0.01" name="YieldQuantityTo" placeholder="كمية إلى" value="@Model?.YieldQuantityTo" />
        </div>
        <div class="col">
            <input class="form-control" type="date" name="ActionDateFrom" value="@(Model?.ActionDateFrom?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col">
            <input class="form-control" type="date" name="ActionDateTo" value="@(Model?.ActionDateTo?.ToString("yyyy-MM-dd"))" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>الاسم</th>
            <th>الوصف</th>
            <th>المنتج</th>
            <th>كمية الإنتاج</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.recipes)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.ProductName</td>
                <td>@item.YieldQuantity</td>
                <td>
                    <form asp-action="ProductProduction" asp-route-RecipeID="@item.ID" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">إنتاج</button>
                    </form>
                    <a class="btn btn-sm btn-primary" asp-action="Save" asp-route-id="@item.ID">تعديل</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ID">تفاصيل</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>


