@model List<SharedModels.EF.DTO.RecipeInfoDTO>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>المادة</th>
                    <th>الكمية المطلوبة</th>

                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr data-item-id="@item.ID">
                        <td>@(i + 1)</td>
                        <td>@item.MaterialName</td>
                        <td>@item.RequiredMaterialQuantity</td>

                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="editRecipeInfo(@item.ID)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form id="delete-recipeinfo-@item.ID" method="post" action="/RecipeInfos/Delete" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.ID" />
                                </form>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteRecipeInfo(@item.ID)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <strong>لا توجد مكونات لهذه الوصفة</strong>
    </div>
}


