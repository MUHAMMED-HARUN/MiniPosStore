@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-4">
                <h1 class="display-4 text-primary">مرحباً بك في نظام إدارة المتجر</h1>
                <p class="lead">اختر الخدمة المطلوبة من القائمة أدناه</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- بطاقة الطلبات -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">إدارة الطلبات</h5>
                    <p class="card-text">عرض وإدارة جميع الطلبات والطلبات الجديدة</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-list"></i> قائمة الطلبات
                        </a>
                        <a asp-controller="Orders" asp-action="Save" class="btn btn-outline-primary">
                            <i class="fas fa-plus"></i> طلب جديد
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- بطاقة المنتجات -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-box fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">إدارة المنتجات</h5>
                    <p class="card-text">عرض وإدارة جميع المنتجات في المتجر</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-success">
                            <i class="fas fa-list"></i> قائمة المنتجات
                        </a>
                        <a asp-controller="Products" asp-action="Save" class="btn btn-outline-success">
                            <i class="fas fa-plus"></i> منتج جديد
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- بطاقة العملاء -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">إدارة العملاء</h5>
                    <p class="card-text">عرض وإدارة بيانات العملاء</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Customers" asp-action="Index" class="btn btn-info">
                            <i class="fas fa-list"></i> قائمة العملاء
                        </a>
                        <a asp-controller="Customers" asp-action="Save" class="btn btn-outline-info">
                            <i class="fas fa-plus"></i> عميل جديد
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- بطاقة الموردين -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-truck fa-3x text-secondary"></i>
                    </div>
                    <h5 class="card-title">إدارة الموردين</h5>
                    <p class="card-text">عرض وإدارة بيانات الموردين والمتاجر</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Suppliers" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> قائمة الموردين
                        </a>
                        <a asp-controller="Suppliers" asp-action="Save" class="btn btn-outline-secondary">
                            <i class="fas fa-plus"></i> مورد جديد
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- بطاقة طلبات الاستيراد -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-download fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title">طلبات الاستيراد</h5>
                    <p class="card-text">إدارة طلبات استيراد المنتجات من الموردين</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="ImportOrders" asp-action="Index" class="btn btn-danger">
                            <i class="fas fa-list"></i> قائمة الطلبات
                        </a>
                        <a asp-controller="ImportOrders" asp-action="Create" class="btn btn-outline-danger">
                            <i class="fas fa-plus"></i> طلب استيراد جديد
                        </a>
                        <a asp-controller="ImportOrders" asp-action="AddItems" class="btn btn-outline-warning">
                            <i class="fas fa-plus-circle"></i> إضافة عناصر للطلبات
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- بطاقة التقارير -->
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-chart-bar fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">التقارير</h5>
                    <p class="card-text">عرض التقارير والإحصائيات</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-warning">
                            <i class="fas fa-chart-line"></i> تقرير المبيعات
                        </a>
                        <a href="#" class="btn btn-outline-warning">
                            <i class="fas fa-chart-pie"></i> تقرير المخزون
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- روابط سريعة إضافية -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-center">
                        <i class="fas fa-bolt text-warning"></i> روابط سريعة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="ImportOrders" asp-action="Index" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-download"></i> طلبات الاستيراد
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="ImportOrders" asp-action="AddItems" class="btn btn-outline-warning btn-sm w-100">
                                <i class="fas fa-plus-circle"></i> إضافة عناصر
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="Suppliers" asp-action="Index" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="fas fa-truck"></i> الموردين
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success btn-sm w-100">
                                <i class="fas fa-box"></i> المنتجات
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-info btn-sm w-100">
                                <i class="fas fa-shopping-cart"></i> الطلبات
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-warning btn-sm w-100">
                                <i class="fas fa-users"></i> العملاء
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="RawMaterials" asp-action="Index" class="btn btn-outline-dark btn-sm w-100">
                                <i class="fas fa-cubes"></i> المواد الخام
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="Recipes" asp-action="Index" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-utensils"></i> الوصفات
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a asp-controller="RecipeInfos" asp-action="Index" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="fas fa-receipt"></i> مكونات الوصفات
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-2">
                            <a href="#" class="btn btn-outline-danger btn-sm w-100">
                                <i class="fas fa-chart-bar"></i> التقارير
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات سريعة -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="text-center mb-4">إحصائيات سريعة</h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-primary text-white text-center">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                    <h6 class="card-title">الطلبات اليوم</h6>
                    <h4 class="card-text">@ViewBag.TodayOrders</h4>
                </div>
            </div>
        </div>

        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-success text-white text-center">
                <div class="card-body">
                    <i class="fas fa-box fa-2x mb-2"></i>
                    <h6 class="card-title">المنتجات</h6>
                    <h4 class="card-text">@ViewBag.ProductsCount</h4>
                </div>
            </div>
        </div>

        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-info text-white text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h6 class="card-title">العملاء</h6>
                    <h4 class="card-text">@ViewBag.CustomersCount</h4>
                </div>
            </div>
        </div>

        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-secondary text-white text-center">
                <div class="card-body">
                    <i class="fas fa-truck fa-2x mb-2"></i>
                    <h6 class="card-title">الربح الصافي</h6>
                    <h4 class="card-text">@ViewBag.NetProfit</h4>
                </div>
            </div>
        </div>

        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-danger text-white text-center">
                <div class="card-body">
                    <i class="fas fa-download fa-2x mb-2"></i>
                    <h6 class="card-title">طلبات الاستيراد</h6>
                    <h4 class="card-text">@ViewBag.ImportOrdersCount</h4>
                </div>
            </div>
        </div>

        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-warning text-white text-center">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                    <h6 class="card-title">المبيعات اليوم</h6>
                    <h4 class="card-text">@ViewBag.TodaySales</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-4 col-6 mb-3">
            <div class="card bg-warning text-white text-center">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                    <h6 class="card-title"> راس مال المحل</h6>
                    <h4 class="card-text">@ViewBag.TotalStockValue</h4>
                </div>
            </div>
        </div>
        <video id="video" width="300" height="200" style="border:1px solid #ccc;"></video>
        <input type="text" id="barcodeResult" placeholder="Scanned code will appear here" />
        <button id="scanbtn">Start Scanning</button>
    </div>
</div>
@section Scripts {
    <script src="/lib/zxing/zxing.min.js"></script>
    <script src="/lib/SignalR/signalr.min.js"></script>
    <script>
        // 1️⃣ إنشاء اتصال SignalR
        const connection = window.setupSignalRConnection(
            "/barcodeHub", // مسار الهب
            "ReceiveMessage", // الحدث الذي يستقبله JS
            function(message) {
                console.log("📩 رسالة مستلمة:", message);
                alert("Received: " + message);

            }
        );

        // 2️⃣ تشغيل ماسح الباركود وإرسال النتائج مباشرة
        window.startBarcodeScan('video', 'barcodeResult', 'scanbtn', function(scannedText) {
            console.log("📦 Barcode Scanned:", scannedText);

            // إرسال الكود عبر SignalR
            // يمكنك استبدال 'TargetUserIdHere' بمعرف المستخدم إذا أردت إرسال محدد
            window.sendSignalRMessage(connection, "SendMessage", "TargetUserIdHere", scannedText);
        });
    </script>
}
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .btn {
        transition: all 0.2s ease-in-out;
    }
    
    .btn:hover {
        transform: scale(1.05);
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
    }
</style>
