@model SharedModels.EF.Models.clsImportRawMaterialItem

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="RawMaterialID" class="form-label">المادة الخام</label>
            <select asp-for="RawMaterialID" class="form-control" asp-items="ViewBag.RawMaterialList">
                <option value="">-- اختر المادة الخام --</option>
            </select>
            <span asp-validation-for="RawMaterialID" class="text-danger"></span>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="Quantity" class="form-label">الكمية</label>
            <input asp-for="Quantity" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="SellingPrice" class="form-label">سعر البيع</label>
            <input asp-for="SellingPrice" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>
    </div>
</div>

<input type="hidden" asp-for="ID" />
<input type="hidden" asp-for="ImportOrderID" />