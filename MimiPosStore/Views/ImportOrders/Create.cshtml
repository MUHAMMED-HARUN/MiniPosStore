@model BAL.BALDTO.ImportOrderBALDTO
@{
    ViewData["Title"] = "إنشاء أمر استيراد جديد";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">إنشاء أمر استيراد جديد</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SupplierID" class="form-label">المورد</label>
                            <select asp-for="SupplierID" class="form-select" asp-items="ViewBag.SupplierList">
                                <option value="">-- اختر المورد --</option>
                            </select>
                            <span asp-validation-for="SupplierID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ImportDate" class="form-label">تاريخ الاستيراد</label>
                            <input asp-for="ImportDate" class="form-control" type="date" />
                            <span asp-validation-for="ImportDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TotalAmount" class="form-label">المبلغ الإجمالي</label>
                            <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PaidAmount" class="form-label">المبلغ المدفوع</label>
                            <input asp-for="PaidAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="PaidAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PaymentStatus" class="form-label">حالة الدفع</label>
                            <select asp-for="PaymentStatus" class="form-select" asp-items="ViewBag.PaymentStatusList">
                                <option value="">-- اختر حالة الدفع --</option>
                            </select>
                            <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> حفظ أمر الاستيراد
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> العودة للقائمة
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // حساب المبلغ المتبقي تلقائياً
            $('#TotalAmount, #PaidAmount').on('input', function () {
                var totalAmount = parseFloat($('#TotalAmount').val()) || 0;
                var paidAmount = parseFloat($('#PaidAmount').val()) || 0;
                var remainingAmount = totalAmount - paidAmount;
                
                // تحديث حالة الدفع تلقائياً
                if (paidAmount >= totalAmount && totalAmount > 0) {
                    $('#PaymentStatus').val('2'); // مدفوع بالكامل
                } else if (paidAmount > 0) {
                    $('#PaymentStatus').val('1'); // مدفوع جزئياً
                } else {
                    $('#PaymentStatus').val('0'); // غير مدفوع
                }
            });
        });
    </script>
}
