@model List<DAL.EF.DTO.ImportOrderItemDTO>
@using BAL.BALDTO;

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>المنتج</th>
                    <th>الكمية</th>
                    <th>سعر البيع</th>
                    <th>المبلغ الإجمالي</th>
                    <th>العملة</th>
                    <th>وحدة القياس</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr class="import-order-item-row" data-item-id="@item.ImportOrderItemID">
                        <td>@(i + 1)</td>
                        <td>
                            <div class="d-flex align-items-center">
@*                                 @if (item.HasProductImage)
                                {
                                    <img src="@item.ProductImageUrl" alt="@item.ProductName" 
                                         class="me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                } *@
                                <div>
                                    <strong>@item.ProductName</strong>
       
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-primary">@item.Quantity</span>
                        </td>
                        <td>
                            <span class="text-success">@item.SellingPrice</span>
                        </td>
                        <td>
                            <span class="item-total text-primary fw-bold">@item.TotalItemAmount</span>
                        </td>
                        <td>
                            <span class="badge bg-info">@item.CurrencyName</span>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@item.UOMName</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary edit-item-btn" 
                                        data-item-id="@item.ImportOrderItemID" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger delete-item-btn" 
                                        data-item-id="@item.ImportOrderItemID" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        <strong>لا توجد عناصر في هذا أمر الاستيراد</strong>
        <br />
        <small>اضغط على زر "إضافة عنصر جديد" لإضافة منتجات لأمر الاستيراد</small>
    </div>
}
