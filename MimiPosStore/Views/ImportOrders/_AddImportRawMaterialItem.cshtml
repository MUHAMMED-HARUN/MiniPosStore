@model SharedModels.EF.Models.clsImportRawMaterialItem

<div class="modal fade" id="addRawMaterialItemModal" tabindex="-1" aria-labelledby="addRawMaterialItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRawMaterialItemModalLabel">
                    <i class="fas fa-flask"></i> إضافة مادة خام جديدة
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="AddRawMaterialItem" method="post" id="addRawMaterialItemForm">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="ImportOrderID" id="addRawMaterialImportOrderIdInput" />
                    <input type="hidden" asp-for="ID" value="0" />

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label class="control-label">المادة الخام</label>
            <div class="input-group">
                <input type="text" id="addRawMaterialSearch" class="form-control" placeholder="اكتب اسم المادة الخام" autocomplete="off" />
                <button class="btn btn-primary" type="button" id="btnSearchRawMaterial">
                    <i class="fas fa-search"></i> بحث
                </button>
            </div>
            <input type="hidden" asp-for="RawMaterialID" id="addRawMaterialID" />
            <div id="rawMaterialSearchResults" class="list-group mt-1" style="max-height: 200px; overflow-y: auto;"></div>
            <span asp-validation-for="RawMaterialID" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="Quantity" class="control-label">الكمية المستوردة</label>
            <input asp-for="Quantity" class="form-control" type="number" min="0.01" step="0.01" id="addRawMaterialQuantityInput" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="SellingPrice" class="control-label">سعر الشراء</label>
            <input asp-for="SellingPrice" class="form-control" type="number" min="0" step="0.01" id="addRawMaterialSellingPriceInput" />
            <span asp-validation-for="SellingPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label class="control-label">المجموع</label>
            <input type="text" class="form-control" id="addRawMaterialTotalInput" readonly />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>ملاحظة:</strong> سيتم إضافة الكمية المستوردة إلى المخزن تلقائياً عند تأكيد أمر الاستيراد.
        </div>
    </div>
</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning">إضافة المادة الخام</button>
                </div>
            </form>
        </div>
    </div>
</div>
