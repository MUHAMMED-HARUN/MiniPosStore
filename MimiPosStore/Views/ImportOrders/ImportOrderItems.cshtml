@model SharedModels.EF.Filters.clsImportOrderItemUnionFilter

@{
    ViewData["Title"] = "عناصر طلبات الاستيراد";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-import"></i> عناصر طلبات الاستيراد
                    </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Simple Filters -->
                    <form asp-action="ImportOrderItems" method="get" class="card card-body mb-3">
                        <div class="row g-2">
                                            <div class="col-md-3">
                                <label class="form-label">رقم عنصر الاستيراد</label>
                                <input asp-for="ImportOrderItemID" type="number" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">رقم أمر الاستيراد</label>
                                <input asp-for="ImportOrderID" type="number" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">رقم العنصر</label>
                                <input asp-for="ItemID" type="number" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">نوع العنصر</label>
                                <select asp-for="ItemType" class="form-select">
                                                        <option value="">جميع الأنواع</option>
                                    @if (ViewBag.ItemTypeList != null)
                                    {
                                                        @foreach (var item in ViewBag.ItemTypeList as SelectList)
                                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                                        }
                                                    </select>
                                                </div>
                            <div class="col-md-3">
                                <label class="form-label">اسم العنصر</label>
                                <input asp-for="ItemName" class="form-control" />
                                            </div>
                            <div class="col-md-3">
                                <label class="form-label">الوصف</label>
                                <input asp-for="Description" class="form-control" />
                                        </div>
                            <div class="col-md-3">
                                <label class="form-label">اسم المورد</label>
                                <input asp-for="SupplierName" class="form-control" />
                                        </div>
                                            <div class="col-md-3">
                                <label class="form-label">الكمية من</label>
                                <input asp-for="QuantityFrom" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">الكمية إلى</label>
                                <input asp-for="QuantityTo" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">سعر الشراء من</label>
                                <input asp-for="SellingPriceFrom" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">سعر الشراء إلى</label>
                                <input asp-for="SellingPriceTo" type="number" step="0.01" class="form-control" />
                                        </div>
                                            <div class="col-md-3">
                                <label class="form-label">سعر الجملة من</label>
                                <input asp-for="WholesalePriceFrom" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">سعر الجملة إلى</label>
                                <input asp-for="WholesalePriceTo" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">الكمية المتاحة من</label>
                                <input asp-for="AvailableQuantityFrom" type="number" step="0.01" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">الكمية المتاحة إلى</label>
                                <input asp-for="AvailableQuantityTo" type="number" step="0.01" class="form-control" />
                                        </div>
                                            <div class="col-md-3">
                                <label class="form-label">تاريخ الاستيراد من</label>
                                                    <input asp-for="ImportDateFrom" type="date" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">تاريخ الاستيراد إلى</label>
                                                    <input asp-for="ImportDateTo" type="date" class="form-control" />
                                                </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                                    <div>
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-search"></i> بحث
                                                        </button>
                                                        <a asp-action="ImportOrderItems" class="btn btn-secondary">
                                                            <i class="fas fa-undo"></i> إعادة تعيين
                                                        </a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                    <!-- Results Section -->
                    <div class="row">
                        <div class="col-12">
                            @if (Model.OrderItemUnionDTOs != null && Model.OrderItemUnionDTOs.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>رقم عنصر الاستيراد</th>
                                                <th>رقم أمر الاستيراد</th>
                                                <th>نوع العنصر</th>
                                                <th>اسم العنصر</th>
                                                <th>الوصف</th>
                                                <th>الكمية</th>
                                                <th>سعر الشراء</th>
                                                <th>سعر الجملة</th>
                                                <th>وحدة القياس</th>
                                                <th>العملة</th>
                                                <th>الكمية المحجوزة</th>
                                                <th>الكمية المستوردة</th>
                                                <th>تاريخ الاستيراد</th>
                                                <th>المورد</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.OrderItemUnionDTOs)
                                            {
                                                <tr>
                                                    <td>@item.ImportOrderItemID</td>
                                                    <td>@item.ImportOrderID</td>
                                                    <td>
                                                        @if (item.ItemType == 1)
                                                        {
                                                            <span class="badge bg-primary">
                                                                <i class="fas fa-box"></i> منتج
                                                            </span>
                                                        }
                                                        else if (item.ItemType == 2)
                                                        {
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-cube"></i> مادة خام
                                                            </span>
                                                        }
                                                    </td>
                                                    <td><strong>@item.Name</strong></td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <span class="badge bg-info">@item.Quantity.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-primary fw-bold">@item.SellingPrice.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-success fw-bold">@item.WholesalePrice.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-secondary">@item.UOMName</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-dark">@item.CurrencyName</span>
                                                    </td>
                                                    <td>
                                                        @if (item.ReservedQuantity > 0)
                                                        {
                                                            <span class="badge bg-warning">@item.ReservedQuantity.ToString("N2")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-success">@item.ImportedQuantity.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted">@item.ImportDate</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">@item.SupplierName</span>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Summary Statistics -->
                                <div class="row mt-3">
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-info"><i class="fas fa-list"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">إجمالي العناصر</span>
                                                <span class="info-box-number">@Model.OrderItemUnionDTOs.Count()</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-success"><i class="fas fa-cube"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">المنتجات</span>
                                                <span class="info-box-number">@Model.OrderItemUnionDTOs.Count(x => x.ItemType == 1)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-warning"><i class="fas fa-box"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">المواد الخام</span>
                                                <span class="info-box-number">@Model.OrderItemUnionDTOs.Count(x => x.ItemType == 2)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-primary"><i class="fas fa-import"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">إجمالي الكمية المستوردة</span>
                                                <span class="info-box-number">@Model.OrderItemUnionDTOs.Sum(x => x.ImportedQuantity).ToString("N2")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-info-circle"></i>
                                    لا توجد عناصر طلبات استيراد مطابقة للفلاتر المحددة.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable if needed
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json"
                },
                "responsive": true,
                "pageLength": 25,
                "order": [[0, "desc"]]
            });
        });
    </script>
}