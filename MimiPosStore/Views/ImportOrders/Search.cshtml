@model IEnumerable<BAL.BALDTO.ImportOrderBALDTO>
@using BAL.BALDTO;
@{
    ViewData["Title"] = "البحث في أوامر الاستيراد";
}

<h1>البحث في أوامر الاستيراد</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-search"></i> نموذج البحث
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Search" method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="searchTerm" class="form-label">كلمة البحث</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                               value="@ViewBag.SearchTerm" placeholder="ابحث برقم أمر الاستيراد أو اسم المورد">
                    </div>
                    <div class="col-md-4">
                        <label for="paymentStatus" class="form-label">حالة الدفع</label>
                        <select class="form-select" id="paymentStatus" name="paymentStatus">
                            <option value="">جميع الحالات</option>
                            <option value="0">غير مدفوع</option>
                            <option value="1">مدفوع جزئياً</option>
                            <option value="2">مدفوع بالكامل</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> بحث
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="alert alert-info">
                نتائج البحث عن: <strong>@ViewBag.SearchTerm</strong>
                <span class="badge bg-primary ms-2">@Model.Count() نتيجة</span>
                <a asp-action="Index" class="btn btn-sm btn-outline-info ms-2">عرض جميع أوامر الاستيراد</a>
            </div>
        </div>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list"></i> نتائج البحث
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>رقم أمر الاستيراد</th>
                                    <th>المورد</th>
                                    <th>هاتف المورد</th>
                                    <th>تاريخ الاستيراد</th>
                                    <th>المبلغ الإجمالي</th>
                                    <th>المبلغ المدفوع</th>
                                    <th>المبلغ المتبقي</th>
                                    <th>حالة الدفع</th>
                                    <th>عدد العناصر</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ImportOrderID</td>
                                        <td>@item.SupplierName</td>
                                        <td>@item.SupplierPhone</td>
                                        <td>@item.FormattedImportDate</td>
                                        <td>@item.FormattedTotalAmount</td>
                                        <td>@item.FormattedPaidAmount</td>
                                        <td class="@(item.IsNotPaid ? "text-danger" : item.IsPartiallyPaid ? "text-warning" : "text-success")">
                                            @item.FormattedRemainingAmount
                                        </td>
                                        <td>
                                            @if (item.IsFullyPaid)
                                            {
                                                <span class="badge bg-success">@item.PaymentStatusText</span>
                                            }
                                            else if (item.IsPartiallyPaid)
                                            {
                                                <span class="badge bg-warning">@item.PaymentStatusText</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@item.PaymentStatusText</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.ItemsCount</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.ImportOrderID" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> تفاصيل
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.ImportOrderID" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i> تعديل
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.ImportOrderID" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-plus-circle"></i> إضافة عناصر
                                                </a>
                                                @if (!item.IsFullyPaid)
                                                {
                                                    <a asp-action="AddPayment" asp-route-id="@item.ImportOrderID" class="btn btn-success btn-sm">
                                                        <i class="fas fa-money-bill"></i> دفع
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>لا توجد نتائج</strong>
                <br />
                <small>لم يتم العثور على أوامر استيراد تطابق معايير البحث</small>
            </div>
        </div>
    </div>
}

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> العودة للقائمة الرئيسية
        </a>
        <a asp-action="AddItems" class="btn btn-warning">
            <i class="fas fa-plus-circle"></i> إضافة عناصر للطلبات
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> إنشاء أمر استيراد جديد
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تفعيل البحث المباشر
            $('#searchTerm').on('keyup', function (e) {
                if (e.keyCode === 13) { // Enter key
                    $('form').submit();
                }
            });
            
            // تفعيل البحث عند تغيير حالة الدفع
            $('#paymentStatus').change(function () {
                if ($('#searchTerm').val() || $(this).val()) {
                    $('form').submit();
                }
            });
        });
    </script>
}
