@model IEnumerable<SharedModels.EF.DTO.ImportOrderItemUnionDTO>

<div class="card" data-import-order-id="@ViewBag.ImportOrderId">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-list"></i> عناصر أمر الاستيراد (منتجات ومواد خام)
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>النوع</th>
                            <th>الاسم</th>
                            <th>الكمية</th>
                                   <th>سعر الشراء</th>
                            <th>وحدة القياس</th>
                            <th>العملة</th>
                            <th>الكمية المحجوزة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                               @foreach (var item in Model)
                               {
                                   <tr class="union-item-row">
                                <td>
                                    @if (item.ItemType == 1)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-box"></i> منتج
                                        </span>
                                    }
                                    else if (item.ItemType == 2)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-cube"></i> مادة خام
                                        </span>
                                    }
                                </td>
                                <td>
                                    <strong>@item.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info quantity">@item.Quantity.ToString("N2")</span>
                                </td>
                                       <td>
                                           <span class="text-primary fw-bold purchase-price">@item.WholesalePrice.ToString("N2")</span>
                                       </td>
                                <td>
                                    <span class="badge bg-secondary">@item.UOMName (@item.UOMName)</span>
                                </td>
                                <td>
                                    <span class="badge bg-dark">@item.CurrencyName</span>
                                </td>
                                <td>
                                    @if (item.ReservedQuantity > 0)
                                    {
                                        <span class="badge bg-warning">@item.ReservedQuantity.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary edit-union-item-btn" 
                                                data-item-id="@item.ImportOrderItemID" 
                                                data-item-type="@item.ItemType">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger delete-union-item-btn" 
                                                data-item-id="@item.ImportOrderItemID"
                                                data-item-type="@item.ItemType">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i>
                لا توجد عناصر في أمر الاستيراد حالياً.
            </div>
        }
    </div>
</div>

