@model SharedModels.EF.Filters.clsImportOrderFilter
 
@{
    ViewData["Title"] = "قائمة أوامر الاستيراد";
}

<h1>قائمة أوامر الاستيراد</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">إنشاء أمر استيراد جديد</a>
</div>

<form asp-action="Index" method="get" class="card card-body mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">الاسم الأول</label>
            <input name="FirstName" value="@Model?.FirstName" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">الاسم الأخير</label>
            <input name="LastName" value="@Model?.LastName" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">رقم الهاتف</label>
            <input name="PhoneNumber" value="@Model?.PhoneNumber" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">من تاريخ الاستيراد</label>
            <input name="StartImportDate" value="@Model?.StartImportDate?.ToString("yyyy-MM-dd")" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">إلى تاريخ الاستيراد</label>
            <input name="EndImportDate" value="@Model?.EndImportDate?.ToString("yyyy-MM-dd")" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">المبلغ الإجمالي من</label>
            <input name="StartTotalAmount" value="@Model?.StartTotalAmount" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">المبلغ الإجمالي إلى</label>
            <input name="EndTotalAmount" value="@Model?.EndTotalAmount" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">المبلغ المدفوع من</label>
            <input name="StartPaidAmount" value="@Model?.StartPaidAmount" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">المبلغ المدفوع إلى</label>
            <input name="EndPaidAmount" value="@Model?.EndPaidAmount" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">حالة الدفع</label>
            <select name="PaymentStatus" class="form-select" asp-items="ViewBag.PaymentStatusList">
                <option value="">الكل</option>
                @if (!string.IsNullOrEmpty(Model?.PaymentStatus))
                {
                    <option selected value="@Model.PaymentStatus">@Model.PaymentStatus</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">عدد العناصر من</label>
            <input name="StartItemsCount" value="@Model?.StartItemsCount" type="number" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">عدد العناصر إلى</label>
            <input name="EndItemsCount" value="@Model?.EndItemsCount" type="number" class="form-control" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-success me-2">تطبيق الفلترة</button>
            <a asp-action="Index" class="btn btn-secondary">تفريغ</a>
        </div>
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info">
        نتائج البحث عن: <strong>@ViewBag.SearchTerm</strong>
        <a asp-action="Index" class="btn btn-sm btn-outline-info ms-2">عرض جميع أوامر الاستيراد</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>رقم أمر الاستيراد</th>
            <th>المورد</th>
            <th>هاتف المورد</th>
            <th>تاريخ الاستيراد</th>
            <th>المبلغ الإجمالي</th>
            <th>المبلغ المدفوع</th>
            <th>المبلغ المتبقي</th>
            <th>حالة الدفع</th>
            <th>عدد العناصر</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.importOrders)
        {
            <tr>
                <td>@item.ImportOrderID</td>
                <td>@item.SupplierName</td>
                <td>@item.SupplierPhone</td>
                <td>@item.ImportDate</td>
                <td>@item.TotalAmount</td>
                <td>@item.PaidAmount</td>
                <td class="@(item.PaidAmount==0 ? "text-danger" : item.PaidAmount<item.TotalAmount ? "text-warning" : "text-success")">
                    @(item.TotalAmount - item.PaidAmount)
                </td>
                <td>
                    <span class="badge bg-warning">@BAL.clsGlobal.GetPaymentStatusList()[@item.PaymentStatus]</span>
                </td>
                <td>
                    <span class="badge bg-info">@item.UnionItems.Count</span>
                    @if (item.UnionItems.Any())
                    {
                        <div class="mt-1">
                            <small class="text-muted">
                                @item.UnionItems.Count(i => i.ItemType == 1) منتج | 
                                @item.UnionItems.Count(i => i.ItemType == 2) مادة خام
                            </small>
                        </div>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.ImportOrderID" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> تفاصيل
                        </a>
                        @if (item.PaymentStatus == ((byte)BAL.clsGlobal.enPaymentStatus.Pending))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ImportOrderID" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                        }
                        @if (item.PaymentStatus==((byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment))
                        {
                            <a asp-action="AddPayment" asp-route-id="@item.ImportOrderID" class="btn btn-success btn-sm">
                                <i class="fas fa-money-bill"></i> دفع
                            </a>
                        }
                        <a asp-action="Delete" asp-route-id="@item.ImportOrderID" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> حذف
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.importOrders.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        لا توجد أوامر استيراد مسجلة حالياً.
    </div>
}

<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">البحث في أوامر الاستيراد</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Search" method="get">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="searchTerm" class="form-label">كلمة البحث</label>
                        <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                               placeholder="ابحث برقم أمر الاستيراد أو اسم المورد">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">بحث</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تفعيل البحث
            $('a[asp-action="Search"]').click(function (e) {
                e.preventDefault();
                $('#searchModal').modal('show');
            });
        });
    </script>
}
