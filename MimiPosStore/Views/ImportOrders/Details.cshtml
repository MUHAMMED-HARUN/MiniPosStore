@model SharedModels.EF.DTO.ImportOrderDTO
 
@{
    ViewData["Title"] = "تفاصيل أمر الاستيراد";
}

<h1>تفاصيل أمر الاستيراد</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> معلومات أمر الاستيراد
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">رقم أمر الاستيراد:</dt>
                    <dd class="col-sm-8">@Model.ImportOrderID</dd>

                    <dt class="col-sm-4">المورد:</dt>
                    <dd class="col-sm-8">@Model.SupplierName</dd>

                    <dt class="col-sm-4">هاتف المورد:</dt>
                    <dd class="col-sm-8">@Model.SupplierPhone</dd>

                    <dt class="col-sm-4">عنوان المورد:</dt>
                    <dd class="col-sm-8">@Model.SupplierAddress</dd>

                    <dt class="col-sm-4">تاريخ الاستيراد:</dt>
                    <dd class="col-sm-8">@Model.ImportDate</dd>

                    <dt class="col-sm-4">المبلغ الإجمالي:</dt>
                    <dd class="col-sm-8">@Model.</dd>

                    <dt class="col-sm-4">المبلغ المدفوع:</dt>
                    <dd class="col-sm-8">@Model.PaidAmount</dd>

                    <dt class="col-sm-4">المبلغ المتبقي:</dt>
                    <dd class="col-sm-8">
                        <span class="@(Model.PaymentStatus == (byte)BAL.clsGlobal.enPaymentStatus.Completed ? "text-danger" : Model.PaymentStatus == (byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment ? "text-warning" : "text-success")">
                            @(Model.TotalAmount - Model.PaidAmount)
                        </span>
                    </dd>

                    <dt class="col-sm-4">حالة الدفع:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-danger">@BAL.clsGlobal.GetPaymentStatusList()[Model.PaymentStatus]</span>
                    </dd>

                    <dt class="col-sm-4">عدد العناصر:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.UnionItems.Count</span>
                        @if (Model.UnionItems.Any())
                        {
                            <div class="mt-1">
                                <small class="text-muted">
                                    @Model.UnionItems.Count(i => i.ItemType == 1) منتج | 
                                    @Model.UnionItems.Count(i => i.ItemType == 2) مادة خام
                                </small>
                            </div>
                        }
                    </dd>

                    <dt class="col-sm-4">المستخدم المسؤول:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

       @*              <dt class="col-sm-4">تاريخ الإجراء:</dt>
                    <dd class="col-sm-8">@Model.FormattedActionDate</dd> *@
                </dl>
            </div>
        </div>

        <!-- قائمة عناصر أمر الاستيراد -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> عناصر أمر الاستيراد
                </h5>
            </div>
            <div class="card-body">
                @if (Model.UnionItems != null && Model.UnionItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>النوع</th>
                                    <th>الاسم</th>
                                    <th>الكمية</th>
                                    <th>سعر البيع</th>
                                    <th>سعر الجملة</th>
                                    <th>وحدة القياس</th>
                                    <th>العملة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.UnionItems)
                                {
                                    <tr>
                                        <td>
                                            @if (item.ItemType == 1)
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-box"></i> منتج
                                                </span>
                                            }
                                            else if (item.ItemType == 2)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-cube"></i> مادة خام
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <br><small class="text-muted">@item.Description</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Quantity.ToString("N2")</span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">@item.SellingPrice.ToString("N2")</span>
                                        </td>
                                        <td>
                                            <span class="text-primary fw-bold">@item.WholesalePrice.ToString("N2")</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.UOMName (@item.UOMName)</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-dark">@item.CurrencyName</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @if (item.ItemType == 1)
                                                {
                                                    <a href="/Products/Edit/@item.ItemID" class="btn btn-sm btn-outline-primary" title="تعديل المنتج">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                else if (item.ItemType == 2)
                                                {
                                                    <a href="/RawMaterials/Edit/@item.ItemID" class="btn btn-sm btn-outline-warning" title="تعديل المادة الخام">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="حذف العنصر">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i>
                        لا توجد عناصر في هذا أمر الاستيراد.
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- ملخص المبالغ -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calculator"></i> ملخص المبالغ
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <h4 class="text-primary">@Model.TotalAmount</h4>
                            <small class="text-muted">المبلغ الإجمالي</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <h4 class="text-success">@Model.PaidAmount</h4>
                            <small class="text-muted">المبلغ المدفوع</small>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <h4 class="@(Model.PaidAmount==0 ? "text-danger" : Model.PaidAmount<Model.TotalAmount ? "text-warning" : "text-success")">
                        @(Model.TotalAmount - Model.PaidAmount)
                    </h4>
                    <small class="text-muted">المبلغ المتبقي</small>
                </div>
            </div>
        </div>

        <!-- حالة الدفع -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-credit-card"></i> حالة الدفع
                </h5>
            </div>
            <div class="card-body text-center">
                @if (Model.PaymentStatus==((byte)BAL.clsGlobal.enPaymentStatus.Completed))
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle fa-2x"></i>
                        <h5>مدفوع بالكامل</h5>
                        <p class="mb-0">تم سداد جميع المبالغ</p>
                    </div>
                }
                else if (Model.PaymentStatus == ((byte)((byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment)))
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                        <h5>معلق للدفع</h5>
                        <p class="mb-0">المتبقي: @(Model.TotalAmount - Model.PaidAmount)</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle fa-2x"></i>
                        <h5>معلق </h5>
                        <p class="mb-0">المطلوب: @Model.TotalAmount</p>
                    </div>
                }
            </div>
        </div>

        <!-- الإجراءات -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs"></i> الإجراءات
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.PaymentStatus == ((byte)BAL.clsGlobal.enPaymentStatus.Pending))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.ImportOrderID" class="btn btn-primary">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ImportOrderID" class="btn btn-warning">
                            <i class="fas fa-plus-circle"></i> إضافة عناصر
                        </a>
                    }

                    @if (Model.PaymentStatus==((byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment))
                    {
                        <a asp-action="AddPayment" asp-route-id="@Model.ImportOrderID" class="btn btn-success">
                            <i class="fas fa-money-bill"></i> إضافة دفعة
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> العودة للقائمة
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
