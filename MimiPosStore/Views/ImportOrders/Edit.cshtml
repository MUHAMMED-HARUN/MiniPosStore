@using SharedModels.EF.DTO
@using SharedModels.EF.Models
@model SharedModels.EF.DTO.ImportOrderDTO
 
@{
    ViewData["Title"] = "تعديل أمر الاستيراد";
}

@section Styles {
    <link rel="stylesheet" href="~/css/orders.css" />
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" id="importOrderForm" data-import-order-id="@Model.ImportOrderID">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="ImportOrderID" />
            <input type="hidden" asp-for="ItemsCount" id="ItemsCount" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SupplierID" class="control-label">المورد</label>
                        <select asp-for="SupplierID" class="form-control"  asp-items="ViewBag.SupplierList" >
                            <option value="">-- اختر المورد --</option>
                        </select>
                        <span asp-validation-for="SupplierID" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ImportDate" class="control-label">تاريخ الاستيراد</label>
                        <input asp-for="ImportDate" class="form-control" type="date" />
                        <span asp-validation-for="ImportDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="TotalAmount" class="control-label">المبلغ الإجمالي</label>
                        <input asp-for="TotalAmount" class="form-control" readonly />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="PaidAmount" class="control-label">المبلغ المدفوع</label>
                        <input asp-for="PaidAmount" class="form-control" />
                        <span asp-validation-for="PaidAmount" class="text-danger"></span>
                    </div>
                </div>
                
        
            </div>
            
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> حفظ
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> العودة للقائمة
                </a>
            </div>
        </form>

        <!-- إضافة عناصر أمر الاستيراد -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> عناصر أمر الاستيراد
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-success" id="addProductBtn" data-bs-toggle="modal" data-bs-target="#addItemModal">
                            <i class="fas fa-plus"></i> إضافة منتج
                        </button>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-warning" id="addRawMaterialBtn" data-bs-toggle="modal" data-bs-target="#addRawMaterialItemModal">
                            <i class="fas fa-cube"></i> إضافة مادة خام
                        </button>
                    </div>
                </div>
                
                <div id="importOrderItems">
                    <!-- سيتم تحميل عناصر أمر الاستيراد هنا عبر AJAX -->
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-3">
                        <strong>المبلغ الإجمالي:</strong> <span id="totalAmount">@Model.TotalAmount @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                    </div>
                    <div class="col-md-3">
                        <strong>المبلغ المدفوع:</strong> <span id="paidAmount">@Model.PaidAmount @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                    </div>
                    <div class="col-md-3">
                        <strong>المبلغ المتبقي:</strong> <span id="remainingAmount" class="text-danger">@((Model.TotalAmount - Model.PaidAmount).ToString("F2")) @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                    </div>
                    <div class="col-md-3">
                        <strong>عدد العناصر:</strong> <span id="itemsCount">0</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> معلومات المورد
                </h5>
            </div>
            <div class="card-body">
                <div id="supplierInfo">
                    @if (Model.ImportOrderID > 0 && !string.IsNullOrEmpty(Model.SupplierName))
                    {
                        <p><strong>اسم المتجر:</strong> @Model.SupplierName</p>
                        <p><strong>الهاتف:</strong> @Model.SupplierPhone</p>
                        <p><strong>العنوان:</strong> @Model.SupplierAddress</p>
                    }
                    else
                    {
                        <p class="text-muted">اختر مورداً لعرض المعلومات</p>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calculator"></i> ملخص المبالغ
                </h5>
            </div>
            <div class="card-body">
                <p><strong>المبلغ الإجمالي:</strong> @Model.TotalAmount</p>
                <p><strong>المبلغ المدفوع:</strong> @Model.PaidAmount</p>
                <p><strong>المبلغ المتبقي:</strong> 
                    <span class="@(Model.PaidAmount==0 ? "text-danger" : Model.PaidAmount<Model.TotalAmount ? "text-warning" : "text-success")">
                        @(Model.TotalAmount - Model.PaidAmount)
                    </span>
                </p>
                <p><strong>عدد العناصر:</strong> @Model.ItemsCount</p>
            </div>
        </div>
    </div>
</div> 


<!-- Modal تعديل منتج -->
<div class="modal fade" id="editItemModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i> تعديل المنتج
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateItem" method="post" id="editItemForm">
                <div class="modal-body">
                    <div id="editItemModalContent">
                        <!-- سيتم تحميل المحتوى هنا -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> تحديث
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal تعديل مادة خام -

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- ملفات JavaScript المنظمة -->
    <script src="~/js/importOrder.js" asp-append-version="true"></script>
    <script src="~/js/importOrderEdit.js" asp-append-version="true"></script>
    <script src="~/js/importOrderUnionItems.js" asp-append-version="true"></script>
}

<!-- Modals للعناصر -->
<div id="partialViewsContainer">
    @await Html.PartialAsync("_AddImportOrderItem", new ImportOrderItemDTO { ImportOrderID = Model.ImportOrderID })
    @await Html.PartialAsync("_EditImportOrderItem", new ImportOrderItemDTO { ImportOrderID = Model.ImportOrderID })
    @await Html.PartialAsync("_AddImportRawMaterialItem", new clsImportRawMaterialItem { ImportOrderID = Model.ImportOrderID })
    @await Html.PartialAsync("_EditImportRawMaterialItem", new clsImportRawMaterialItem { ImportOrderID = Model.ImportOrderID })
</div>
