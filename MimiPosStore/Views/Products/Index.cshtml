@model BAL.BALFilters.clsProductFilterBAL
@using BAL.BALDTO;
@{
    ViewData["Title"] = "قائمة المنتجات";
}

<h1>قائمة المنتجات</h1>

<div class="mb-3">
    <a asp-action="Save" asp-route-id="0" class="btn btn-primary">إضافة منتج جديد</a>
</div>

<form asp-action="Index" method="get" class="card card-body mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label">الاسم</label>
            <input name="Name" value="@Model?.Name" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">الوصف</label>
            <input name="Description" value="@Model?.Description" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">سعر البيع من</label>
            <input name="MinRetailPrice" value="@Model?.MinRetailPrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">سعر البيع إلى</label>
            <input name="MaxRetailPrice" value="@Model?.MaxRetailPrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">سعر الجملة من</label>
            <input name="MinWholesalePrice" value="@Model?.MinWholesalePrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">سعر الجملة إلى</label>
            <input name="MaxWholesalePrice" value="@Model?.MaxWholesalePrice" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">الكمية من</label>
            <input name="MinAvailableQuantity" value="@Model?.MinAvailableQuantity" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">الكمية إلى</label>
            <input name="MaxAvailableQuantity" value="@Model?.MaxAvailableQuantity" type="number" step="0.01" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">العملة</label>
            <select name="CurrencyType" class="form-select" asp-items="ViewBag.CurrencyList">
                <option value="">الكل</option>
                @if (!string.IsNullOrEmpty(Model?.CurrencyType))
                {
                    <option selected value="@Model.CurrencyType">@Model.CurrencyType</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">وحدة القياس</label>
            <select name="UnitOfMeasureName" class="form-select" asp-items="ViewBag.UOMList">
                <option value="">الكل</option>
                @if (!string.IsNullOrEmpty(Model?.UnitOfMeasureName))
                {
                    <option selected value="@Model.UnitOfMeasureName">@Model.UnitOfMeasureName</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-success me-2">تطبيق الفلترة</button>
            <a asp-action="Index" class="btn btn-secondary">تفريغ</a>
        </div>
    </div>
    
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info">
        نتائج البحث عن: <strong>@ViewBag.SearchTerm</strong>
        <a asp-action="Index" class="btn btn-sm btn-outline-info ms-2">عرض جميع المنتجات</a>
    </div>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th scope="col">الصورة</th>
            <th scope="col">الاسم</th>
            <th scope="col">الوصف</th>
            <th scope="col">سعر البيع</th>
            <th scope="col">سعر الجملة</th>
            <th scope="col">الكمية المتوفرة</th>
            <th scope="col">وحدة القياس</th>
            <th scope="col">الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductDTOList)
        {
            <tr>
                <!-- الصورة -->
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="@item.Name" style="width: 60px; height: 60px; object-fit: cover;" class="rounded">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="width: 60px; height: 60px;">
                            <i class="fas fa-image text-muted"></i>
                        </div>
                    }
                </td>

                <!-- البيانات -->
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td class="text-primary fw-bold">@item.RetailPrice.ToString("C")</td>
                <td class="text-success fw-bold">@item.WholesalePrice @BAL.clsGlobal.GetCurrencyTypeString(1)</td>
                <td class="fw-bold @(item.AvailableQuantity > 0 ? "text-success" : "text-danger")">@item.AvailableQuantity</td>
                <td>@item.UOMName</td>

                <!-- الإجراءات -->
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Save" asp-route-id="@item.ID" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> حذف
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (!Model.ProductDTOList.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        لا توجد منتجات مسجلة حالياً.
    </div>
}
