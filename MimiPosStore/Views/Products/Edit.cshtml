@model BAL.BALDTO.ProductBALDTO
@using BAL.BALDTO;
@{
    ViewData["Title"] = "تعديل المنتج";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">تعديل المنتج</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UOMID" class="control-label"></label>
                                    <select asp-for="UOMID" class="form-control" asp-items="ViewBag.UOMList">
                                        <option value="">-- اختر وحدة القياس --</option>
                                    </select>
                                    <span asp-validation-for="UOMID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="RetailPrice" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="RetailPrice" class="form-control" type="number" step="0.01" min="0" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">ريال</span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="RetailPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="WholesalePrice" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="WholesalePrice" class="form-control" type="number" step="0.01" min="0" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">ريال</span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="WholesalePrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="AvailableQuantity" class="control-label"></label>
                                    <input asp-for="AvailableQuantity" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="ImagePath" class="control-label"></label>
                                    <input asp-for="ImagePath" class="form-control" placeholder="مسار الصورة (اختياري)" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="btn-group" role="group">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-save"></i> حفظ التعديلات
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> رجوع
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
