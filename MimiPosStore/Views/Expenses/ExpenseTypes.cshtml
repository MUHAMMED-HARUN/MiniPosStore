@model SharedModels.EF.Filters.clsExpenseTypeFilter

@{
    ViewData["Title"] = "أنواع المصروفات";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-list"></i> أنواع المصروفات
                    </h3>
                    <div class="card-tools">
                        <a asp-action="CreateExpenseType" class="btn btn-primary">
                            <i class="fas fa-plus"></i> إضافة نوع مصروف جديد
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-money-bill-wave"></i> المصروفات
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filters Section -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card card-primary collapsed-card">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        <i class="fas fa-filter"></i> فلاتر البحث
                                    </h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body" style="display: none;">
                                    <form asp-action="ExpenseTypes" method="get">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="ID" class="control-label">رقم النوع</label>
                                                    <input asp-for="ID" class="form-control" placeholder="رقم النوع" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Name" class="control-label">اسم النوع</label>
                                                    <input asp-for="Name" class="form-control" placeholder="اسم النوع" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="Description" class="control-label">الوصف</label>
                                                    <input asp-for="Description" class="form-control" placeholder="الوصف" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label">&nbsp;</label>
                                                    <div>
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-search"></i> بحث
                                                        </button>
                                                        <a asp-action="ExpenseTypes" class="btn btn-secondary">
                                                            <i class="fas fa-undo"></i> إعادة تعيين
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Results Section -->
                    <div class="row">
                        <div class="col-12">
                            @if (Model.expenseTypes != null && Model.expenseTypes.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>رقم النوع</th>
                                                <th>اسم النوع</th>
                                                <th>الوصف</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.expenseTypes)
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>
                                                        <strong>@item.Name</strong>
                                                    </td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="EditExpenseType" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-edit"></i> تعديل
                                                            </a>
                                                            <a asp-action="DeleteExpenseType" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-trash"></i> حذف
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Summary Statistics -->
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-info"><i class="fas fa-list"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">إجمالي أنواع المصروفات</span>
                                                <span class="info-box-number">@Model.expenseTypes.Count()</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-info-circle"></i>
                                    لا توجد أنواع مصروفات مطابقة للفلاتر المحددة.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable if needed
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json"
                },
                "responsive": true,
                "pageLength": 25,
                "order": [[0, "desc"]]
            });
        });
    </script>
}
