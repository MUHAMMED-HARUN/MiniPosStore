@model SharedModels.EF.Filters.clsExpensesFilter

@{
    ViewData["Title"] = "المصروفات";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-money-bill-wave"></i> المصروفات
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> إضافة مصروف جديد
                        </a>
                        <a asp-action="ExpenseTypes" class="btn btn-secondary">
                            <i class="fas fa-list"></i> أنواع المصروفات
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Simple Filters -->
                    <form asp-action="Index" method="get" class="card card-body mb-3">
                        <div class="row g-2">
                                            <div class="col-md-3">
                                <label class="form-label">رقم المصروف</label>
                                <input asp-for="ID" type="number" class="form-control" />
                                            </div>
                                            <div class="col-md-3">
                                <label class="form-label">نوع المصروف</label>
                                <select asp-for="ExpenseTypeID" class="form-select">
                                                        <option value="">جميع الأنواع</option>
                                    @if (ViewBag.ExpenseTypeList != null)
                                    {
                                                        @foreach (var item in ViewBag.ExpenseTypeList as SelectList)
                                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                                        }
                                                    </select>
                                                </div>
                            <div class="col-md-3">
                                <label class="form-label">الوصف</label>
                                <input asp-for="Description" class="form-control" />
                                            </div>
                            <div class="col-md-3">
                                <label class="form-label">نوع الإجراء</label>
                                <select asp-for="ActionType" class="form-select">
                                                        <option value="">جميع الإجراءات</option>
                                    @if (ViewBag.ActionTypeList != null)
                                    {
                                                        @foreach (var item in ViewBag.ActionTypeList as SelectList)
                                                        {
                                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                        }
                                                        }
                                                    </select>
                                                </div>
                            <div class="col-md-3">
                                <label class="form-label">تاريخ المصروف من</label>
                                <input asp-for="ExpenseDateFrom" type="date" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">تاريخ المصروف إلى</label>
                                <input asp-for="ExpenseDateTo" type="date" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">المبلغ من</label>
                                <input asp-for="AmountFrom" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">المبلغ إلى</label>
                                <input asp-for="AmountTo" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">المستخدم</label>
                                <input asp-for="ActionByUser" class="form-control" />
                                            </div>
                            <div class="col-md-3">
                                <label class="form-label">&nbsp;</label>
                                                    <div>
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-search"></i> بحث
                                                        </button>
                                                        <a asp-action="Index" class="btn btn-secondary">
                                                            <i class="fas fa-undo"></i> إعادة تعيين
                                                        </a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                    <!-- Results Section -->
                    <div class="row">
                        <div class="col-12">
                            @if (Model.expenses != null && Model.expenses.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>رقم المصروف</th>
                                                <th>تاريخ المصروف</th>
                                                <th>نوع المصروف</th>
                                                <th>الوصف</th>
                                                <th>المبلغ</th>
                                                <th>المستخدم</th>
                                                <th>نوع الإجراء</th>
                                                <th>تاريخ الإجراء</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.expenses)
                                            {
                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>
                                                        <span class="badge bg-info">@item.ExpenseDate.ToString("yyyy-MM-dd")</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary">@item.ExpenseTypeName</span>
                                                    </td>
                                                    <td>@item.Description</td>
                                                    <td>
                                                        <span class="text-success fw-bold">@item.Amount.ToString("N2")</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted">@item.UserName</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-secondary">@item.ExpenseTypeName</span>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted">@item.ActionDate.ToString("yyyy-MM-dd")</span> 
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Summary Statistics -->
                                <div class="row mt-3">
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-info"><i class="fas fa-list"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">إجمالي المصروفات</span>
                                                <span class="info-box-number">@Model.expenses.Count()</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-success"><i class="fas fa-money-bill-wave"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">إجمالي المبلغ</span>
                                                <span class="info-box-number">@Model.expenses.Sum(x => x.Amount).ToString("N2")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-warning"><i class="fas fa-calendar"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">هذا الشهر</span>
                                                <span class="info-box-number">@Model.expenses.Count(x => x.ExpenseDate.Month == DateTime.Now.Month && x.ExpenseDate.Year == DateTime.Now.Year)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="info-box">
                                            <span class="info-box-icon bg-primary"><i class="fas fa-chart-line"></i></span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">متوسط المصروف</span>
                                                <span class="info-box-number">@(Model.expenses.Any() ? Model.expenses.Average(x => x.Amount).ToString("N2") : "0.00")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info text-center">
                                    <i class="fas fa-info-circle"></i>
                                    لا توجد مصروفات مطابقة للفلاتر المحددة.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable if needed
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json"
                },
                "responsive": true,
                "pageLength": 25,
                "order": [[0, "desc"]]
            });
        });
    </script>
}
