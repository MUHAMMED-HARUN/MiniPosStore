@model SharedModels.EF.Filters.clsRecipeInfoFilter
@{
    ViewData["Title"] = "تفاصيل الوصفات";
}

<h2>تفاصيل الوصفات</h2>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col">
            <input class="form-control" name="RecipeName" placeholder="اسم الوصفة" value="@Model?.RecipeName" />
        </div>
        <div class="col">
            <input class="form-control" name="MaterialName" placeholder="اسم المادة" value="@Model?.MaterialName" />
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" type="submit">بحث</button>
            <a class="btn btn-success" asp-action="Save">إضافة</a>
        </div>
    </div>
    <div class="row g-2 mt-2">
        <div class="col">
            <input class="form-control" type="number" step="0.01" name="RequiredMaterialQuantityFrom" placeholder="كمية مطلوبة من" value="@Model?.RequiredMaterialQuantityFrom" />
        </div>
        <div class="col">
            <input class="form-control" type="number" step="0.01" name="RequiredMaterialQuantityTo" placeholder="كمية مطلوبة إلى" value="@Model?.RequiredMaterialQuantityTo" />
        </div>
  
    </div>
    <div class="row g-2 mt-2">
        <div class="col">
            <input class="form-control" type="date" name="ActionDateFrom" value="@(Model?.ActionDateFrom?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col">
            <input class="form-control" type="date" name="ActionDateTo" value="@(Model?.ActionDateTo?.ToString("yyyy-MM-dd"))" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>الوصفة</th>
            <th>المادة</th>
            <th>المطلوب</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.recipeInfos)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.RecipeName</td>
                <td>@item.MaterialName</td>
                <td>@item.RequiredMaterialQuantity</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Save" asp-route-id="@item.ID">تعديل</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ID">تفاصيل</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>


