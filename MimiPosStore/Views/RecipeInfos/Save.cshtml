@model SharedModels.EF.Models.clsRecipeInfo
@{
    ViewData["Title"] = Model.ID == 0 ? "إضافة عنصر وصفة" : "تعديل عنصر وصفة";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">الوصفة</label>
            <select class="form-select" asp-for="RecipeID" asp-items="ViewBag.RecipeList"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">المادة</label>
            <select class="form-select" asp-for="RawMaterialID" asp-items="ViewBag.MaterialList"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">الكمية المطلوبة</label>
            <input class="form-control" asp-for="RequiredMaterialQuantity" type="number" step="0.01" />
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">حفظ</button>
            <a class="btn btn-secondary" asp-action="Index">رجوع</a>
        </div>
    </div>
    
</form>


