@model IEnumerable<SharedModels.EF.Models.clsSupplier>
 
@{
    ViewData["Title"] = "قائمة الموردين";
}

<h1>قائمة الموردين</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة مورد جديد</a>
    <a asp-action="AddSupplier" class="btn btn-success">إضافة مورد من الأشخاص</a>
    <a asp-action="Search" class="btn btn-info">البحث عن مورد</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>معرف المورد</th>
            <th>معرف الشخص</th>
            <th>الاسم الأول</th>
            <th>الاسم الأخير</th>
            <th>الاسم الكامل</th>
            <th>رقم الهاتف</th>
            <th>اسم المتجر</th>
            <th>عنوان المتجر</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.PersonID</td>
                <td>@item.Person.FirstName</td>
                <td>@item.Person.LastName</td>
                <td>@(item.Person.FirstName + " " + item.Person.LastName)</td>
                <td>@item.Person.PhoneNumber</td>
                <td>@item.StoreName</td>
                <td>@item.StoreAddress</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> تفاصيل
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> تعديل
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        لا توجد موردين مسجلين حالياً.
    </div>
}
