@model List<SharedModels.EF.DTO.OrderItemUnionDTO>
 
    
@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>العنصر</th>
                    <th>الكمية</th>
                    <th>سعر البيع</th>
                    <th>سعر الجملة</th>
                    <th>المبلغ الإجمالي</th>
                    <th>المبلغ المخصوم</th>
                    <th>المبلغ بعد الخصم</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr class="order-item-row" data-item-id="@item.OrderItemID">
                        <td>@(i + 1)</td>
                        <td>
                            <strong>@(string.IsNullOrEmpty(item.Name) ? "غير محدد" : item.Name)</strong>
                        </td>
                        <td>
                            <span class="badge bg-primary">@item.Quantity</span>
                        </td>
                        <td>
                            <span class="text-success">@item.SellingPrice @BAL.clsGlobal.GetCurrencyTypeString(item.CurrencyType)</span>
                        </td>
                        <td>
                            <span class="text-success">@item.WholesalePrice @BAL.clsGlobal.GetCurrencyTypeString(item.CurrencyType)</span>
                        </td>
                        <td>
                            <span class="item-total text-primary fw-bold">@( (item.Quantity * item.SellingPrice).ToString("F2") ) @BAL.clsGlobal.GetCurrencyTypeString(item.CurrencyType)</span>
                        </td>
                        <td>
                            <span class="item-discount text-warning fw-bold">@((item.PriceAdjustment ?? 0).ToString("F2")) @BAL.clsGlobal.GetCurrencyTypeString(item.CurrencyType)</span>
                        </td>
                        <td>
                            <span class="item-final text-success fw-bold">@((item.Quantity * item.SellingPrice - (item.PriceAdjustment ?? 0)).ToString("F2")) @BAL.clsGlobal.GetCurrencyTypeString(item.CurrencyType)</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @{
                                    var isProduct = item.ItemType == (int)BAL.clsGlobal.enOrderItemType.Product;
                                    var editController = isProduct ? "Products" : "RawMaterials";
                                }
                                @if (isProduct)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="editOrderItem(@item.OrderItemID, @item.OrderID)" title="تعديل المنتج">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="editRawMaterialItem(@item.OrderItemID, @item.OrderID)" title="تعديل المادة">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                }
                                @if (isProduct)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteItem(@item.OrderItemID, @item.OrderID)" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteMaterialItem(@item.OrderItemID, @item.OrderID)" title="حذف المادة">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        <strong>لا توجد عناصر في هذا الطلب</strong>
        <br />
        <small>اضغط على زر "إضافة عنصر جديد" لإضافة منتجات للطلب</small>
    </div>
}
