@model List<BAL.BALDTO.OrderItemsBALDTO>
@using BAL.BALDTO;

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>المنتج</th>
                    <th>الكمية</th>
                    <th>سعر البيع</th>
                    <th>المبلغ الإجمالي</th>
                    <th>المبلغ المخصوم</th>
                    <th>المبلغ بعد الخصم</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr class="order-item-row" data-item-id="@item.ID">
                        <td>@(i + 1)</td>
                        <td>
                            <strong>@(string.IsNullOrEmpty(item.ProductName) ? "غير محدد" : item.ProductName)</strong>
                        </td>
                        <td>
                            <span class="badge bg-primary">@item.Quantity</span>
                        </td>
                        <td>
                            <span class="text-success">@item.SellingPrice @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                        </td>
                        <td>
                            <span class="item-total text-primary fw-bold">@item.SubTotal.ToString("F2") @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                        </td>
                        <td>
                            <span class="item-discount text-warning fw-bold">@item.DiscountAmount.ToString("F2") @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                        </td>
                        <td>
                            <span class="item-final text-success fw-bold">@item.FinalAmount.ToString("F2") @BAL.clsGlobal.GetCurrencyTypeString(1)</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="editOrderItem(@item.ID, @item.OrderID)" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteItem(@item.ID, @item.OrderID)" title="حذف">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        <strong>لا توجد عناصر في هذا الطلب</strong>
        <br />
        <small>اضغط على زر "إضافة عنصر جديد" لإضافة منتجات للطلب</small>
    </div>
}
