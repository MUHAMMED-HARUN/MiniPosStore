@model SharedModels.EF.DTO.OrderDTO
@{
    ViewData["Title"] = "إضافة دفعة";
}

<h1>إضافة دفعة</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-money-bill"></i> إضافة دفعة جديدة
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="AddPayment" method="post">
                    <input type="hidden" name="id" value="@Model.ID" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">رقم الطلب</label>
                                <input type="text" class="form-control" value="@Model.ID" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">العميل</label>
                                <input type="text" class="form-control" value="@(Model.FirstName + " " + Model.LastName)" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">المبلغ الإجمالي</label>
                                <input type="text" class="form-control text-success" value="@Model.TotalAmount @BAL.clsGlobal.GetCurrencyTypeString(1)" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">المبلغ المدفوع</label>
                                <input type="text" class="form-control text-info" value="@Model.PaidAmount.ToString("C")" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">المبلغ المتبقي</label>
                                <input type="text" class="form-control text-danger" value="@((Model.TotalAmount - Model.PaidAmount)+ BAL.clsGlobal.GetCurrencyTypeString(1))" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="paymentAmount" class="form-label">مبلغ الدفعة الجديدة</label>
                                <input type="number" id="paymentAmount" name="paymentAmount" class="form-control" 
                                       step="0.01" min="0.01" max="@(Model.TotalAmount - Model.PaidAmount)" required />
                                <div class="form-text">أقصى مبلغ يمكن دفعه: @((Model.TotalAmount - Model.PaidAmount) + BAL.clsGlobal.GetCurrencyTypeString(1))</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> إضافة الدفعة
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> العودة للقائمة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- ملخص المبالغ -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calculator"></i> ملخص المبالغ
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-success mb-1">@Model.TotalAmount @BAL.clsGlobal.GetCurrencyTypeString(1)</h4>
                            <small class="text-muted">المبلغ الإجمالي</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-info mb-1">@Model.PaidAmount @BAL.clsGlobal.GetCurrencyTypeString(1)</h4>
                        <small class="text-muted">المبلغ المدفوع</small>
                    </div>
                </div>
                
                <hr />
                
                <div class="text-center">
                    <h3 class="text-danger mb-1">@((Model.TotalAmount - Model.PaidAmount) + BAL.clsGlobal.GetCurrencyTypeString(1))</h3>
                    <small class="text-muted">المبلغ المتبقي</small>
                </div>

                @if (Model.PaymentStatus == ((byte)BAL.clsGlobal.enPaymentStatus.Completed))
                {
                    <div class="alert alert-success text-center mt-3">
                        <i class="fas fa-check-circle"></i>
                        <strong>تم الدفع بالكامل</strong>
                    </div>
                }
                else if (Model.PaymentStatus == ((byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment))
                {
                    <div class="alert alert-warning text-center mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>دفع غير مكتمل</strong>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger text-center mt-3">
                        <i class="fas fa-times-circle"></i>
                        <strong>غير مدفوع</strong>
                    </div>
                }
            </div>
        </div>

        <!-- معلومات إضافية -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> معلومات إضافية
                </h5>
            </div>
            <div class="card-body">
                <p><strong>تاريخ الطلب:</strong><br>@Model.OrderDate.ToString("dd/MM/yyyy")</p>
                <p><strong>حالة الدفع:</strong><br>
                    @switch (Model.PaymentStatus)
                    {
                        case ((byte)BAL.clsGlobal.enPaymentStatus.Completed):
                            <span class="badge bg-danger">مدفوع بالكامل</span>
                            break;
                        case ((byte)BAL.clsGlobal.enPaymentStatus.PendingForPayment):
                            <span class="badge bg-warning">دفع غير مكتمل</span>
                            break;

                    }
                </p>
                <p><strong>المستخدم المسؤول:</strong><br>@Model.ActionByUser</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // التحقق من مبلغ الدفعة
            $('#paymentAmount').on('input', function () {
                var paymentAmount = parseFloat($(this).val()) || 0;
                var remainingAmount = @(Model.TotalAmount - Model.PaidAmount);
                
                if (paymentAmount > remainingAmount) {
                    $(this).addClass('is-invalid');
                    $(this).next('.form-text').addClass('text-danger').text('المبلغ أكبر من المتبقي');
                } else if (paymentAmount <= 0) {
                    $(this).addClass('is-invalid');
                    $(this).next('.form-text').addClass('text-danger').text('يجب أن يكون المبلغ أكبر من صفر');
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.form-text').removeClass('text-danger').text('أقصى مبلغ يمكن دفعه: @((Model.TotalAmount - Model.PaidAmount).ToString("C"))');
                }
            });

            // منع إرسال النموذج إذا كان المبلغ غير صحيح
            $('form').on('submit', function (e) {
                var paymentAmount = parseFloat($('#paymentAmount').val()) || 0;
                var remainingAmount = @(Model.TotalAmount - Model.PaidAmount);
                
                if (paymentAmount > remainingAmount || paymentAmount <= 0) {
                    e.preventDefault();
                    alert('يرجى إدخال مبلغ صحيح');
                    return false;
                }
            });
        });
    </script>
}
