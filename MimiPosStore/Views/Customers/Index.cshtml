@model IEnumerable<BAL.BALDTO.CustomerBALDTO>
@using BAL.BALDTO;
@{
    ViewData["Title"] = "قائمة العملاء";
}

<h1>قائمة العملاء</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة عميل جديد</a>
    <a asp-action="AddCustomer" class="btn btn-success">إضافة عميل من الأشخاص</a>
    <a asp-action="Search" class="btn btn-info">البحث عن عميل</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>معرف العميل</th>
            <th>معرف الشخص</th>
            <th>الاسم الأول</th>
            <th>الاسم الأخير</th>
            <th>الاسم الكامل</th>
            <th>رقم الهاتف</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerID</td>
                <td>@item.PersonID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@(item.FirstName + " " + item.LastName)</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> تفاصيل
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> تعديل
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        لا توجد عملاء مسجلين حالياً.
    </div>
}
